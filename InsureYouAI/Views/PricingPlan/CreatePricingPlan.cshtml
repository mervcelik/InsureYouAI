@model PricingPlan
@{
    ViewData["Title"] = "CreatePricingPlan";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Fiyat Plan Girişi</h5>
        </div>
        <form method="post">
            <label for="Title" class="form-label">Başlık</label>
            <input type="text" class="form-control mb-3" asp-for="Title" />
            <br />
            <label for="Price" class="form-label">Fiyat</label>
            <input type="text" class="form-control mb-3" asp-for="Price" />
            <br />

            <button type="submit" class="btn btn-primary"> Planı Kaydet Kaydet </button>
        </form>
    </div>
</div>
