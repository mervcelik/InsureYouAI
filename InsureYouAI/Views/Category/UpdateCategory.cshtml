@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Sigorta Kategori Düzenleme</h5>
        </div>
        <form method="post">
            <input type="hidden" asp-for="CategoryId"/>
            <label for="Title" class="form-label">Kategori Adı</label>
            <input type="text" class="form-control mb-3" asp-for="CategoryName" />
            <br />
            <button type="submit" class="btn btn-success"> Kategoryi Kaydet </button>
        </form>
    </div>
</div>
