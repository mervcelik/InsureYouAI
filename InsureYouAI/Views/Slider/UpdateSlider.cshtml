@model Slider
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateSlider</h1>

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Slider Güncelleme Sayfası</h5>
        </div>
        <form method="post">
            <input type="hidden" asp-for="SliderId" />
            <label for="Title" class="form-label">Slider Başlık</label>
            <input type="text" class="form-control mb-3" asp-for="Title" />
            <br />
            <label for="Description" class="form-label">Açıklama</label>
            <input type="text" class="form-control mb-3" asp-for="Description" />
            <br />

            <label for="ImageUrl" class="form-label">Görsel Url</label>
            <input type="text" class="form-control mb-3" asp-for="ImageUrl" />
            <br />

            <button type="submit" class="btn btn-success"> Slider Güncelle </button>
        </form>
    </div>
</div>
